<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="用户名："
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_username_changepassword"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="旧密码："
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_oldpassword_changepassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="新密码："
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_password1_changepassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="新密码："
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ed_password2_changepassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_change_changepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="修改密码" />
</LinearLayout>